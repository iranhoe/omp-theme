{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
		{
          "type": "os",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#26c6DA",
          "background": "#546E7A",
          "properties": {
        	"postfix": " ",
			"wsl_separator": " \uE0B1 "
          }
        },
		{
          "type": "session",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#B4009E",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "prefix": "",
            "template": " {{ .UserName }}"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#2d3436",
          "background": "#FF9248",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#C5E478{{ end }}",
            "{{ if gt .Anead 0 }}#C79EA{{ end }}",
            "{{ if gt .Behind 0 }}#C792EA{{ end }}"
          ],
          "foreground": "#011627",
          "background": "#4E44FF",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_icon": "\uE725",
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uF046 {{ .Staging.String }}</>{{ end }}"
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#4e903d",
          "properties": {
            "prefix": " \uE718 "
          }
        }
	  ]
    },
	{
	  "type": "prompt",
	  "alignment": "right",
	  "segments": [
		{
		  "type": "shell",
		  "style": "diamond",
		  "foreground": "#ffffff",
		  "background": "#0077C2",
		  "leading_diamond": "\uE0B6",
		  "trailing_diamond": "",
		  "properties": {
			"prefix": "\uF489 "
		  }
		},
		{
		  "type": "executiontime",
		  "style": "plain",
		  "foreground": "#ffffff",
		  "background": "#83769C",
		  "properties": {
			"always_enable": true,
			"prefix": "ï¨ž"
		  }
		}, 
	    {
          "type": "time",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#003543",
		  "trailing_diamond": "\uE0B4",
          "properties": {
            "prefix": " \uF5EF ",
            "time_format": "15:04"
          }
        }
	  ]
	},
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "diamond",
		  "trailing_diamond": "\uE0B4",
		  "leading_diamond": "\uE0B6",
          "foreground": "#7FD5EA",
		  "background": "#29315A",
          "properties": {
            "prefix": "",
            "text": "\u276F",
			"postfix": ""
          }
        }
      ]
    }
  ],
  "final_space": false
}
