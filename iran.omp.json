{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [	
		{
          "type": "session",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#9A348E",
          "leading_diamond": "\uE0B6",
          "properties": {
            "prefix": "",
            "template": "{{ .UserName }}"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#FFFFFF",
          "background": "#07585C",
          "properties": {
            "style": "folder",
			"prefix": " \uE5FF "
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#C5E478{{ end }}",
            "{{ if gt .Anead 0 }}#C79EA{{ end }}",
            "{{ if gt .Behind 0 }}#C792EA{{ end }}"
          ],
          "foreground": "#011627",
          "background": "#4E44FF",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_icon": "\uE725 ",
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uF046 {{ .Staging.String }}</>{{ end }}"
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#83769C",
		  "trailing_diamond": "\uE0B0",
          "properties": {
            "always_enable": "false",
           	"prefix": " \uE38B "
          }
        }

	  ]
    },
	{
	  "type": "prompt",
	  "alignment": "right",
	  "segments": [
		{
		  "type": "shell",
		  "style": "diamond",
		  "foreground": "#ffffff",
		  "background": "#0077C2",
		  "leading_diamond": "\uE0B6",
		  "trailing_diamond": "",
		  "properties": {
			"prefix": "\uF489 "
		  }
		},
		{
          "type": "os",
          "style": "diamond",
          "foreground": "#26c6DA",
          "background": "#546E7A",
          "properties": {
        	"postfix": " ",
			"wsl_separator": " \uE0B1 ",
			"prefix": " "
          }
        },
		{
		  "type": "dotnet",
		  "style": "powerline",
		  "powerline_symbol": "\uE0B0",
		  "foreground": "#ffffff",
		  "background": "#5A2E90",
		  "properties": {
			"prefix": " \uE77F "
		  }
		},
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#4e903d",
          "properties": {
            "prefix": " \uE718 "
          }
		},
		{
          "type": "time",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#003543",
		  "trailing_diamond": "\uE0B4",
          "properties": {
            "prefix": " \uF5EF ",
            "time_format": "15:04"
          }
        }
	  ]
	},
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7FD5EA",
          "properties": {
            "prefix": "",
            "text": "\u276F",
			"postfix": " "
          }
        }
      ]
    }
  ],
  "final_space": false
}
